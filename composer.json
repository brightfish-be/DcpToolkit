{
    "name": "brightfish-be/dcptoolkit",
    "description": "PHP Package to read and write DCP Digital Cinema packages",
    "keywords": [
        "brightfish-be",
        "dcptoolkit"
    ],
    "homepage": "https://github.com/brightfish-be/dcptoolkit",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Forret @ BF",
            "email": "p.forret@brightfish.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "laravel/pint": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Brightfish-be\\DcpToolkit\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brightfish-be\\DcpToolkit\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
